<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	
	<!-- action -->
	<bean id="categoryAction" class="ssh.category.action.CategoryActionImpl" scope="prototype"></bean>

	<!-- service -->
	<bean id="categoryService" class="ssh.category.service.CategoryServiceImpl"></bean>
	
	<!-- dao -->
	<bean id="categoryDao" class="ssh.category.dao.CategoryDaoImpl"></bean>
	
</beans>
