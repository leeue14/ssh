<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- action -->
	<bean id="productAction" class="ssh.product.action.ProductActionImpl" scope="prototype"></bean>
	
	<!-- service -->
	<bean id="productService" class="ssh.product.service.ProductServiceImpl"></bean>
	
	<!-- dao -->
	<bean id="productDao" class="ssh.product.dao.ProductDaoImpl"></bean>
	
</beans>
